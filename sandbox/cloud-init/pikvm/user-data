#cloud-config
hostname: pikvm
manage_etc_hosts: true

users:
  - name: pikvm
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: [wheel]
    shell: /bin/bash
    ssh_authorized_keys:
      - ssh-ed25519 AAAA...yourkey

package_update: true
packages:
  - vim
  - net-tools
  - openssh

runcmd:
  - systemctl enable sshd
  - systemctl start sshd
